
record(aai, "$(N)Players") {
    field(FTVL, "STRING")
    field(NELM, "2")
    field(PINI,"YES")
    field(INP , {const:["Player A", "Player B"]})
    info(Q:group, {
        "$(N)ResultsTable":{
            +id:"epics:nt/NTTable:1.0",
            "labels":{+type:"plain", +channel:"VAL", +putorder:1}
        }
    })
    field(TPRO, "1")
}

record(aai, "$(N)PointsA") {
    field(FTVL, "LONG")
    field(NELM, "10")
    field(PINI,"YES")
    field(INP , {const:[1, 2]})
    info(Q:group, {
        "$(N)ResultsTable":{
            "value.A":{+type:"plain", +channel:"VAL", +putorder:1}
        }
    })
    field(TPRO, "1")
#    field(FLNK, "$(N)Save")
}

record(aai, "$(N)PointsB") {
    field(FTVL, "LONG")
    field(NELM, "10")
    field(PINI,"YES")
    field(INP , {const:[3, 4]})
    info(Q:group, {
        "$(N)ResultsTable":{
            "value.B":{+type:"plain", +channel:"VAL", +putorder:1}
        }
    })
    field(TPRO, "1")
#    field(FLNK, "$(N)Save")
}

